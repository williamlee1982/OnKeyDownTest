<MudTextField AdornmentColor="Color.Secondary" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Outlined.Info" Label="Test KeyPress Event Here" @ref="TestTextField" OnKeyPress="btnView_Clicked" Clearable="true" @bind-Value="@LotId" Variant="Variant.Outlined" />

